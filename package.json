{
  "name": "integration-testing",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build": "yarn clean && yarn compile && tsc -b && webpack",
    "clean": "rm -rf ./dest .tsbuildinfo ./src/artifacts ./src/contracts/target",
    "compile": "cd src && ${AZTEC_NARGO:-aztec-nargo} compile",
    "test": "NODE_NO_WARNINGS=1 node --experimental-vm-modules $(yarn bin jest) --runInBand"
  },
  "jest": {
    "preset": "ts-jest/presets/default-esm",
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "testRegex": "./src/.*\\.test\\.ts$",
    "rootDir": "./src"
  },
  "dependencies": {
    "@aztec/aztec.js": "0.16.9",
    "@aztec/foundation": "0.16.9",
    "@aztec/types": "0.16.9",
    "@types/jest": "^29.5.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "10.9.1",
    "typescript": "5.2.2"
  }
}
